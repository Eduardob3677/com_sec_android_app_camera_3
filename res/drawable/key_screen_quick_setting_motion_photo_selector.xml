<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@drawable/camera_quick_ic_motion_photo_off_off" />
    <item android:state_selected="true">
        <level-list>
            <item android:drawable="@drawable/camera_quick_ic_motion_photo_off_on" android:maxLevel="0" />
            <item android:drawable="@drawable/camera_quick_ic_motion_photo_on_on" android:maxLevel="1" />
            <item android:drawable="@drawable/camera_quick_ic_motion_photo_auto_on" android:maxLevel="2" />
        </level-list>
    </item>
    <item>
        <level-list>
            <item android:drawable="@drawable/camera_quick_ic_motion_photo_off_off" android:maxLevel="0" />
            <item android:drawable="@drawable/camera_quick_ic_motion_photo_on_off" android:maxLevel="1" />
            <item android:drawable="@drawable/camera_quick_ic_motion_photo_auto_off" android:maxLevel="2" />
        </level-list>
    </item>
</selector>

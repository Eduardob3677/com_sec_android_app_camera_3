<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@drawable/camera_quick_ic_flash_off" />
    <item android:state_selected="true">
        <level-list>
            <item android:drawable="@drawable/camera_indicator_stabilizationoff_on" android:maxLevel="0" />
            <item android:drawable="@drawable/camera_indicator_stabilization_on" android:maxLevel="1" />
            <item android:drawable="@drawable/camera_indicator_horizonlock_on" android:maxLevel="2" />
        </level-list>
    </item>
    <item>
        <level-list>
            <item android:drawable="@drawable/camera_indicator_stabilizationoff" android:maxLevel="0" />
            <item android:drawable="@drawable/camera_indicator_stabilization" android:maxLevel="1" />
            <item android:drawable="@drawable/camera_indicator_horizonlock" android:maxLevel="2" />
        </level-list>
    </item>
</selector>

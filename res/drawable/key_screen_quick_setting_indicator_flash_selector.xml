<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@drawable/camera_indicator_flash_off" />
    <item android:state_selected="true">
        <level-list>
            <item android:drawable="@drawable/camera_indicator_flash_off" android:maxLevel="0" />
            <item android:drawable="@drawable/camera_indicator_flash_auto_on" android:maxLevel="1" />
            <item android:drawable="@drawable/camera_indicator_flash_on" android:maxLevel="2" />
            <item android:drawable="@drawable/camera_quick_ic_torch_on" android:maxLevel="3" />
        </level-list>
    </item>
    <item>
        <level-list>
            <item android:drawable="@drawable/camera_indicator_flash_off" android:maxLevel="0" />
            <item android:drawable="@drawable/camera_indicator_flash_auto" android:maxLevel="1" />
            <item android:drawable="@drawable/camera_quick_ic_torch_off" android:maxLevel="3" />
        </level-list>
    </item>
</selector>
